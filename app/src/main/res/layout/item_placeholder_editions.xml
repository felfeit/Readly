<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itemPlaceHolderEditions"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingHorizontal="8dp">

    <View
        android:id="@+id/itemPlaceholderEditionsCover"
        android:layout_width="@dimen/_56sdp"
        android:layout_height="0dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintDimensionRatio="2:3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/itemPlaceholderEditionsTitle"
        android:layout_width="@dimen/_56sdp"
        android:layout_height="@dimen/_10sdp"
        android:layout_marginStart="16dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintStart_toEndOf="@id/itemPlaceholderEditionsCover"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/itemPlaceholderEditionsPublishDate"
        android:layout_width="@dimen/_56sdp"
        android:layout_height="@dimen/_8sdp"
        android:layout_marginStart="16dp"
        android:background="@android:color/darker_gray"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@id/itemPlaceholderEditionsCover"
        app:layout_constraintTop_toBottomOf="@id/itemPlaceholderEditionsTitle" />

    <View
        android:id="@+id/itemPlaceholderEditionsRevision"
        android:layout_width="@dimen/_56sdp"
        android:layout_height="@dimen/_8sdp"
        android:background="@android:color/darker_gray"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toEndOf="@id/itemPlaceholderEditionsCover"
        app:layout_constraintTop_toBottomOf="@id/itemPlaceholderEditionsPublishDate" />

</androidx.constraintlayout.widget.ConstraintLayout>